# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=release
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release)
  protobuf_config = release
  botan_config = release
  zstd_config = release
  archivarius_config = release
endif
ifeq ($(config),debug)
  protobuf_config = debug
  botan_config = debug
  zstd_config = debug
  archivarius_config = debug
endif

PROJECTS := protobuf botan zstd archivarius

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

protobuf:
ifneq (,$(protobuf_config))
	@echo "==== Building protobuf ($(protobuf_config)) ===="
	@${MAKE} --no-print-directory -C . -f protobuf.make config=$(protobuf_config)
endif

botan:
ifneq (,$(botan_config))
	@echo "==== Building botan ($(botan_config)) ===="
	@${MAKE} --no-print-directory -C . -f botan.make config=$(botan_config)
endif

zstd:
ifneq (,$(zstd_config))
	@echo "==== Building zstd ($(zstd_config)) ===="
	@${MAKE} --no-print-directory -C . -f zstd.make config=$(zstd_config)
endif

archivarius: protobuf botan zstd
ifneq (,$(archivarius_config))
	@echo "==== Building archivarius ($(archivarius_config)) ===="
	@${MAKE} --no-print-directory -C . -f archivarius.make config=$(archivarius_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f protobuf.make clean
	@${MAKE} --no-print-directory -C . -f botan.make clean
	@${MAKE} --no-print-directory -C . -f zstd.make clean
	@${MAKE} --no-print-directory -C . -f archivarius.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release"
	@echo "  debug"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   protobuf"
	@echo "   botan"
	@echo "   zstd"
	@echo "   archivarius"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"